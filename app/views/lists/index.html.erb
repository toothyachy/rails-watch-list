<div style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://www.auditoria-services.com/wp-content/uploads/2016/11/The-Ultimate-1.jpg'); background-size: cover; background-position: center; height: 250px" class="d-flex justify-content-center align-items-center bg-opacity-75">
  <h1 class="text-light fs-1 fw-bold">Save All Your Movies!</h1>
</div>

<div class="container d-flex justify-content-center mt-3">
  <div class="col-10">
      <% @lists.each do |list| %>
        <div class="cards">
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.image_url %>)"><%= link_to list.name, list_path(list.id), class: "text-decoration-none text-white fs-3" %></div>
      <% end %>
    </div>
  </div>
